@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActiveProfileMenu"] = ManageNavPages.ChangePassword;
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="change-password-form" method="post" class="row g-3">
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="col-lg-6">
        <label asp-for="Input.OldPassword"></label>
        <input asp-for="Input.OldPassword" class="form-control" />
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>
    <div class="col-12 m-0 p-0"></div>
    <div class="col-lg-6">
        <label asp-for="Input.NewPassword"></label>
        <input asp-for="Input.NewPassword" class="form-control" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="col-lg-6">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
    </div>
</form>

@section Scripts {

}