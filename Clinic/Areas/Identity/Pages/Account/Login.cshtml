@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    // Layout = "_Layout";
}

<form id="account" method="post">
    <div class="d-flex align-items-center py-4">
        <div class="form-signin w-100 m-auto row g-3">
            <div class="col-12">
                <div class="mb-2 text-center">
                    <h2 class="h2">@ViewData["Title"]</h2>
                </div>
            </div>
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="col-12">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control mb-0" placeholder="nombre@ejemplo.com" />
                <span asp-validation-for="Input.Email" class="text-danger mb-1"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control mb-0" placeholder="********" />
                <span asp-validation-for="Input.Password" class="text-danger mb-1"></span>
            </div>
            <div class="col-12 form-check">
                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe">
                <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>
            <div class="col-12">
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg py-2 mt-3 w-100">Ingresar</button>
                </div>
            </div>
        </div>
    </div>
</form>
