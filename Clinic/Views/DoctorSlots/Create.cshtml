@model Clinic.Models.VM.SlotsCreate

@{
    ViewData["Title"] = "Registar horario de citas";
}

<div class="container p-sm-4">

    <h1>Registrar citas</h1>

    <h4>Citas (horarios)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="DurationInMinutes" class="control-label"></label>
                    <input asp-for="DurationInMinutes" class="form-control" />
                    <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar citas" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
